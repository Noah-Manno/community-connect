<div class="row">
    <div class="col s12 m3 l4 side-image-events">
        <h3 class="white-text">Post</h3>
    </div>
    <div class="col s12 m9 l8 main-events-container">
        <div class="bolder-container">
            <h1 class="black-text bold">{{title}}</h1>
            <p class="desc">{{body}}</p>
            {{#if logged_in}}
            <h3>Add Comment</h3>
            <form id="addCommentForm" data-post-id={{id}}>
                <div class="input-field">
                    <textarea name="commentBody" id="comment-body"></textarea>
                    <label class="grey-text" for="comment-body">What do you think about this post?</label>
                </div>
                <button type="submit" class="waves-effect waves-light btn">
                    Add Comment
                </button>
            </form>

            {{/if}}
        </div>
        <div class="posts">
        {{#if comments.length}}
        {{#each comments}}
        <div class="title-container-blue">
            <div class="bolder-container bolder-container-blue">
                <span class="black-text">{{body}}</span><br>
            </div>
            <span class="black-text right">Posted on {{date_created}}<br>By: <span
                    class="bold">{{createdBy}}</span></span>
        </div>
        {{/each}}
        {{else}}
        <h1 class="bold black-text">No Comments Found</h1>
        {{/if}}
        </div>
    </div>
</div>
</div>

<script src="../public/js/addComment.js"></script>